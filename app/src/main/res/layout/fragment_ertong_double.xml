<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_et_bk"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_dimen"
        android:drawableLeft="@drawable/fuxuan"
        android:drawablePadding="@dimen/big_dimen"
        android:text="猜开奖中两个指定的相同号码，奖金15莫币"
        android:textColor="@android:color/holo_blue_dark" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_similar_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/base_dimen" />
</LinearLayout>