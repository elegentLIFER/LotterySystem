<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sxmh.wt.lotterysystem.view.RestTimeView
        android:id="@+id/rest_time_view"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen"
        android:layout_marginTop="@dimen/base_dimen"
        android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_select_red"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/shape_et_bk"/>
</LinearLayout>