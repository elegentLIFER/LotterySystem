<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_et_bk">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/big_dimen"
            android:text="123,234,345,456任意开出即中10莫币"
            android:textColor="@android:color/holo_blue_dark" />

        <com.sxmh.wt.lotterysystem.view.ReportButton
            android:id="@+id/rb_all_select"
            android:layout_width="500dp"
            android:layout_marginTop="@dimen/big_dimen"
            android:layout_height="wrap_content"
            android:text="三连号通选"
            android:textColor="@color/colorTextWhite" />
    </LinearLayout>
</FrameLayout>